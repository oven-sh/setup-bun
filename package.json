{
  "private": true,
  "name": "setup-bun",
  "version": "1.0.0",
  "description": "Setup Bun on GitHub Actions.",
  "keywords": [
    "bun",
    "bun.js",
    "github",
    "actions",
    "setup"
  ],
  "homepage": "https://bun.sh",
  "main": "dist/action.js",
  "repository": "git@github.com:oven-sh/setup-bun.git",
  "bugs": "https://github.com/oven-sh/setup-bun/issues",
  "license": "MIT",
  "author": "xHyroM",
  "scripts": {
    "format": "prettier --write src",
    "build": "esbuild --target=node16 --outdir=dist --bundle --platform=node --format=cjs src/action.ts",
    "start": "bun run build && node dist/action.js"
  },
  "dependencies": {
    "@actions/cache": "^3.1.4",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "quoteProps": "preserve"
  }
}
